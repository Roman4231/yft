<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yft.admin.myapplication.fragments.ChooseTraining"
    >


    <ListView
        android:id="@+id/chooseTrainingLV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:background="@color/myGray_f2"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/choose_training_imageViewLeft"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_choose_training_slice_left_light" />


            <Button
                android:id="@+id/choose_training_imageViewRight"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/choose_training_imageViewLeft"
                android:background="@drawable/ic_choose_training_slice_right_dark" />

        </RelativeLayout>

        <View
            android:id="@+id/choose_training_view"
            android:layout_width="2dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#292929" />

    </RelativeLayout>


</FrameLayout>
